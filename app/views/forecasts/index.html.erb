<% if @forecast_data %>
  <h1>Weather Forecast for <%= @zip_code %></h1>

  <p>Current Temperature: <%= @forecast_data['temp'] %>Â°C</p>

  <% if @from_cache %>
    <p>Forecast data retrieved from cache.</p>
  <% end %>
<% else %>
  <h1>Weather Forecast</h1>

  <% if @zip_code %>
    <p><%= @zip_code %> is invalid</p>
